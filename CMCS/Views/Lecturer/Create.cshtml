@model CMCS.Models.ClaimDocument

@{
    ViewBag.Title = "Lecturer Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Welcome, Maphutha Nkgopjane</h2>



<hr />

<h4>Submit a Claim / Session Log</h4>

<form asp-action="Create" method="post" enctype="multipart/form-data" class="row g-3 mb-5">
    @Html.AntiForgeryToken()

    <div class="col-md-6">
        <label asp-for="MentorName" class="form-label"></label>
        <input asp-for="MentorName" class="form-control" />
        <span asp-validation-for="MentorName" class="text-danger"></span>
    </div>

    <div class="col-md-3">
        <label asp-for="HoursWorked" class="form-label"></label>
        <input asp-for="HoursWorked" class="form-control" type="number" step="0.25" min="0.01" />
        <span asp-validation-for="HoursWorked" class="text-danger"></span>
    </div>

    <div class="col-md-3">
        <label asp-for="HourlyRate" class="form-label"></label>
        <input asp-for="HourlyRate" class="form-control" type="number" step="0.01" min="0.01" />
        <span asp-validation-for="HourlyRate" class="text-danger"></span>
    </div>

    <div class="col-12">
        <label asp-for="Notes" class="form-label"></label>
        <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Notes" class="text-danger"></span>
    </div>

    <div class="col-12">
        <label class="form-label">Evidence (.pdf, .docx, .xlsx) — max 5 MB</label>
        <input class="form-control" type="file" name="evidence" />
    </div>

    <div class="col-12">
        <button class="btn btn-primary" type="submit">Submit</button>
    </div>
</form>



