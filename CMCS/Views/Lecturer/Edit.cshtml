@using CMCS.Models
@model ClaimDocument

@{
    Layout = "_Layout";
}

<h2 class="mb-3">Fix & Resubmit</h2>

<div class="alert alert-warning">
    Reviewer note: <strong>@Model.ReviewNote</strong>
</div>

<form asp-action="Edit" method="post" enctype="multipart/form-data" class="row g-3">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="col-md-6">
        <label class="form-label">Mentor</label>
        <input class="form-control" value="@Model.MentorName" readonly />
    </div>

    <div class="col-md-3">
        <label class="form-label">Hours Worked</label>
        <input class="form-control" asp-for="HoursWorked" type="number" step="0.25" min="0.01" />
        <span class="text-danger" asp-validation-for="HoursWorked"></span>
    </div>

    <div class="col-md-3">
        <label class="form-label">Hourly Rate</label>
        <input class="form-control" asp-for="HourlyRate" type="number" step="0.01" min="0.01" />
        <span class="text-danger" asp-validation-for="HourlyRate"></span>
    </div>

    <div class="col-12">
        <label class="form-label">Notes (optional)</label>
        <textarea class="form-control" asp-for="Notes" rows="3"></textarea>
        <span class="text-danger" asp-validation-for="Notes"></span>
    </div>

    <div class="col-12">
        <label class="form-label">Replace Evidence (optional)</label>
        <input class="form-control" type="file" name="evidence" />
    </div>

    <div class="col-12">
        <button class="btn btn-primary" type="submit">Resubmit</button>
        <a class="btn btn-outline-secondary" href="/MentorLogs/MyLogs">Cancel</a>
    </div>
</form>

